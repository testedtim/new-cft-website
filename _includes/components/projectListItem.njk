<article{% if item.url == url %} data-current="current item"{% endif %} class="h-card">
    <div class="h-card__img">
        <img src="{{ item.data.image }}" alt="{{ item.data.imgAlt }}">
    </div>
    <div class="h-card__content">
        <h3>
            <a href="{{ item.url | url }}" rel="noopener">{{ item.data.title }}</a>
        </h3>
        <p>{{ item.data.summary }}</p>
    </div>
</article>